  <div class='row'>
    <div style="margin-top: 10px; margin-bottom: 10px" class='col-lg-12 text-center'>
      <h3>Completed Today</h3>
      <h3><%= @patient_counts %></h3>
    </div>
    <div style="margin-top: 10px; margin-bottom: 20px" class='col-lg-12 text-center'>
      <%= form_for @host.patient_counts.new do |f| %>
        <%= f.hidden_field :amount, value: 1 %>
        <button class='btn btn-success'><i class='fa fa-plus'></i>  Add 1 To Completed Count</button>
      <% end %>
    </div>
    <div class='col-lg-12'>
      <b>Your email:</b> <%= @user.email %>
    </div>
    <div class='col-lg-6'>
      <%= form_for @host do |f| %>
        <div class='form-group'>
          <b>Host Name</b>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class='form-group'>
          <b>Host Street Address</b>
          <%= f.text_field :address_1, class: "form-control" %>
        </div>
        <div class='form-group'>
          <b>Host State</b>
          <%= f.text_field :state, class: "form-control" %>
        </div>
        <div class='form-group'>
          <b>Host Zipcode</b>
          <%= f.text_field :zipcode, class: "form-control" %>
        </div>
        <div class='form-group'>
          <button class='btn btn-primary'>Update Host Info</button>
        </div>
      <% end %>
    </div>
    <div class='col-lg-6'>
      <div style='width: 100%;'>
        <div id="host-map" style='width: 100%; height: 300px;'></div>
      </div>
    </div>
  </div>

<script>
  $(document).ready(function(){
    locationHandler = Gmaps.build('Google');
    locationHandler.buildMap({ provider: {}, internal: {id: 'host-map'}}, function(){
      markers = locationHandler.addMarkers([
        {
          "lat": 33.7490,
          "lng": -84.3880,
          "infowindow": "<%= @host.name %>"
        }
      ]);
      locationHandler.bounds.extendWith(markers);
      locationHandler.fitMapToBounds();
    });
  })
</script>