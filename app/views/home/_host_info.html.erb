  <div class='row'>
    <div class='col-lg-12'>
      <div class='form-group'>
        <b>Your email:</b> <%= @user.email %>
      </div>
      <div class='form-group'>
        <b>Host Name:</b> <%= @host.name %>
      </div>
      <div class='form-group'>
        <b>Host Address:</b> <%= @host.full_address %>
      </div>
    </div>
    <div style="margin-top: 10px; margin-bottom: 10px" class='col-lg-4 text-center'>
      <h3>Completed Today</h3>
      <h3><%= @patient_counts %></h3>
      <%= form_for @host.patient_counts.new do |f| %>
        <%= f.hidden_field :amount, value: 1 %>
        <button class='btn btn-success'><i class='fa fa-plus'></i>  Add 1 To Completed Count</button>
      <% end %>
    </div>
    <div style="margin-top: 10px; margin-bottom: 20px" class='col-lg-4'>

    </div>
    <div class='col-lg-12'>
    </div>
  </div>